<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saisreenivas.test.firebasestorage.MainActivity">


    <Button
        android:id="@+id/button_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Choose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edittext_title"
        android:layout_width="0dp"
          android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Title of the photo"
        app:layout_constraintLeft_toRightOf="@+id/button_chooser"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>


    <Button
        android:id="@+id/button_uploader"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_uploads"
        />

    <Button
        android:gravity="center_horizontal"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="view Uploads"
        android:id="@+id/view_uploads"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp"/>

    <ImageView
        android:id="@+id/image_display"
        android:layout_width="368dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_chooser"
        app:layout_constraintBottom_toTopOf="@+id/button_uploader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>
